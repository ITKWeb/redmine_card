<%= javascript_include_tag('jquery-1.6.1.min.js', :plugin => 'redmine_card') %>
<%= javascript_include_tag('date.format.js', :plugin => 'redmine_card') %>
<%= javascript_include_tag('card', :plugin => 'redmine_card') %>
<%= stylesheet_link_tag 'card', :media => "all", :plugin => 'redmine_card' %>


<input type="hidden" id="relativeUrl" value="<%= Redmine::Utils::relative_url_root %>"/>
<input type="hidden" id="apiKey" value="<%= @apiKey %>"/>

<form class="form-horizontal project-form" onsubmit="return false;">
	<div class="control-group">
		<label class="control-label" for="project">Project</label>
		<div class="controls">
			<select id="project"></select>
		</div>
	</div>
	<div class="control-group">
		<label class="control-label" for="tracker">Tracker</label>
		<div class="controls">
			<select id="tracker">
        			<option value="">-</option>
		       		 <% @trackers.each do |tracker| %>
		  			<option value="<%=tracker.id %>"><%=tracker.name %></option>
				<% end %>
      			</select>
		</div>
	</div>
	<div class="control-group">
		<label class="control-label" for="search-assigned">Assigned To</label>
		<div class="controls">
			<select id="search-group"></select>
			<select id="search-assigned"></select>
		</div>
	</div>
	<div class="control-group">
		<label class="control-label" for="status">Status</label>
		<div class="controls">
			<select id="status">
				<option value="">-</option>
				<% @statuses.each do |status| %>
					<option value="<%=status.id %>"><%=status.name %></option>
				<% end %>
			</select>
		</div>
	</div>
	<div class="control-group">
		<label class="control-label" for="date-since">Since</label>
		<div class="controls">
			<input  type="text" id="date-since" placeholder="YYYY-MM-dd"/>
		</div>
	</div>
	<div class="control-group">
		<label class="control-label" for="search-id">Id</label>
		<div class="controls">
			<input  type="text" id="search-id" placeholder="Ticket Id"/>
		</div>
	</div>
	<div class="control-group">
		<div class="controls">
			<button type="submit" class="btn submit1">Add Tickets</button>
		</div>
	</div>
	<div class="control-group">
		<div class="controls">
			<button type="submit" class="btn submit2">Clear & Load Tickets</button>
		</div>
	</div>
	<div class="control-group">
		<div class="controls">
			<button type="submit" class="btn buttonClear" id="buttonClear">Reset</button>
		</div>
	</div>
</form>

<div class="ticket ticket-modele">
</div>

<div id="tickets">


</div>
